# Latest version of Alpine Linux
FROM alpine:latest

# Lucas Duarte (lucas.f.duarte@ufv.br)
MAINTAINER lucasfsduarte

# Install dependencies
RUN apk --no-cache add \
    build-base \
    python3 \
    clang \
    clang-dev \
    libc-dev \
    linux-headers \
    libbpf \
    libbpf-dev \
    iproute2

